@model List<NetMvc.Models.Db.User>
@{
}

<h2>Clientes <a class="btn btn-success" asp-action="Creation">Nuevo cliente</a></h2>
<div class="row">
    <table class="table  table-hover table-responsive ">
        <thead>
           <tr>
                <td >ID</td>
                <td >Nombre</td>
                <td >Email</td>
               <td></td>

           </tr>
        </thead>

        <tbody>

                @foreach (var customer in Model)
                {
                    <tr>
                        <td scope="row">@customer.Id
                        </td>
                        <td>@customer.FullName</td>
                        <td>@customer.Email</td>
                        <th><a asp-action="Edit" asp-route-customerId="@customer.Id" class="btn btn-info">Editar </a></th>
                    <th><a asp-action="Delete" asp-route-Id="@customer.Id" class="btn btn-info btn-danger">Eliminar</a></th>

                    </tr>
                }

        </tbody>
</table>
</div>


