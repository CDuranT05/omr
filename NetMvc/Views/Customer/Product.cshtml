@model NetMvc.Models.OrdersModel


<div class="card">
    <div class="card-header">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/shopping-supermarket-cart-full-of-items-vector.jpg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                ORDEN DE COMPRA
            </a>
        </div>
    </div>

    <div class="card-body">

        <form class="row g-3" asp-action="OrderSave">
            <div class="col-auto">
                <label asp-for="Product" class="visually-hidden">Productos</label>
                <select asp-for="Product" asp-items="@Model.Products">
                    <option>Seleccione un Producto</option>
                </select>
            </div>
            <div class="col-auto">
                <label asp-for="ProductQuanty" class="visually-hidden">Cantidad</label>
                <input asp-for="ProductQuanty" type="number" max="31" min="1" value="1" step="1">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Agregar</button>
            </div>
        </form>

        
    </div>
</div>
